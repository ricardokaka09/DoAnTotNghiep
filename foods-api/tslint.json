{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": ["node_modules", "dist"]
  },
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "no-unused-variable": [true, { "ignore-pattern": "^_" }],
    "max-classes-per-file": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-typecast",
      "check-rest-spread",
      "check-type",
      "check-preblock",
      "check-postbrace"
    ],
    "ban-types": [
      true,
      ["Object", "Avoid using the `Object` type. Should use `object`?"],
      ["Boolean", "Avoid using the `Boolean` type. Should use `boolean`?"],
      ["Number", "Avoid using the `Number` type. Should use `number`?"],
      ["String", "Avoid using the `String` type. Should use `string`?"],
      ["Symbol", "Avoid using the `Symbol` type. Should use `symbol`?"]
    ],
    "arrow-return-shorthand": true,
    "quotemark": [true, "single"],
    "member-access": [false],
    "ordered-imports": [false],
    "max-line-length": [true, 130],
    "member-ordering": [false],
    "interface-name": [false],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "semicolon": [true, "never"],
    "cyclomatic-complexity": [true, 12]
  },
  "rulesDirectory": []
}
